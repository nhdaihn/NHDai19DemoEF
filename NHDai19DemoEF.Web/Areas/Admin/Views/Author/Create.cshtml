@model NHDai19DemoEF.Web.Areas.Admin.ViewModel.AuthorEditViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <section class="content-header">
        <h4>
            <b>Create new Author</b>
        </h4>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Author</li>
            <li class="active">Create</li>
        </ol>
    </section>

    <section class="content">
        <div class="container-fluid">
            <form action="/Admin/Author/Create" method="post" class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label name="Name" class="control-label">Name:</label>
                    <div>
                        <input type="text" name="AuthorName" class="form-control" />
                        @Html.ValidationMessageFor(m => m.AuthorName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">History:</label>
                    <div>
                        <textarea class="form-control" name="History" id="ckeditor"></textarea>
                        @Html.ValidationMessageFor(m => m.History, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Add" />
                    <a href="/Admin/Author" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </section>
</div>

@section scripts {
    <script src="~/Areas/Admin/Scripts/plugins/ckeditor/ckeditor.js"></script>
    <script src="~/Areas/Admin/Scripts/plugins/ckeditor/ckeditorconfig.js"></script>
}



